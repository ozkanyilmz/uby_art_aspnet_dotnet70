@{
    var action = ViewContext.RouteData.Values["action"]!.ToString();
}

<aside id="colorlib-breadcrumbs">
    <div class="container">
        <div class="row">
            <div class="col-md-12 breadcrumbs text-center">
                <h2>@(ViewData["Subtitle"]!=null?ViewData["Subtitle"]: ViewData["Title"])</h2>
                <p><span><a href="/">Ana Sayfa</a></span> / 
                
                @if (ViewData["Subtitle"]!=null)
                {
                   <span><a href='@(action=="BlogDetail"?"/blog":action=="WorkDetail"?"/work":"/event")'>@ViewData["Title"]</a></span>

                   @("/")

                    <span>@ViewData["Subtitle"] </span>
                }
                else
                {
                    <span>@ViewData["Title"]</span>
                }
                
                
                </p>
            </div>
        </div>
    </div>
</aside>